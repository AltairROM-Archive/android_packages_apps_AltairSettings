<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:settings="http://schemas.android.com/apk/res-auto"
    android:title="@string/power_menu_settings_title">

    <PreferenceScreen
        android:key="power_menu_actions"
        android:title="@string/power_menu_actions_title"
        android:summary="@string/power_menu_actions_summary"
        android:fragment="com.altair.settings.fragments.PowerMenuActions" />

    <com.lineage.support.preferences.CustomSeekBarPreference
        android:key="power_menu_background_alpha"
        android:title="@string/power_menu_background_alpha_title"
        settings:min="0"
        android:max="100" />

    <lineageos.preference.LineageSecureSettingSwitchPreference
        android:key="advanced_reboot"
        android:title="@string/advanced_reboot_title"
        android:summary="@string/advanced_reboot_summary"
        android:defaultValue="true" />

    <com.lineage.support.preferences.SecureSettingSwitchPreference
        android:key="global_actions_panel_enabled"
        android:title="@string/cards_passes_setting_toggle"
        android:summary="@string/cards_passes_setting_subtitle"
        android:defaultValue="false" />

    <com.lineage.support.preferences.SecureSettingSwitchPreference
        android:key="controls_enabled"
        android:title="@string/device_controls_setting_toggle"
        android:summary="@string/device_controls_setting_subtitle"
        android:defaultValue="true" />

    <com.lineage.support.preferences.SecureSettingSwitchPreference
        android:key="power_menu_locked_show_content"
        android:title="@string/power_menu_lock_screen_privacy"
        android:defaultValue="false" />
</PreferenceScreen>

